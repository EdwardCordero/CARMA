<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CarInformationLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CarInformation">

<!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnTires"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:background="#9503A9F4"
        android:text="Tire Rotation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <Button
        android:id="@+id/btnFluids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="#9503A9F4"
        android:text="Engine Oil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTires"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toEndOf="@+id/btnBrakes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <Button
        android:id="@+id/btnBelts"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginEnd="76dp"
        android:background="#9503A9F4"
        android:text="Timing Belts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTires"
        app:layout_constraintVertical_bias="0.291" />

    <Button
        android:id="@+id/btnAirFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9503A9F4"
        android:text="Air Filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBelts"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBrakes"
        app:layout_constraintVertical_bias="0.291" />

    <Button
        android:id="@+id/btnBrakes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9503A9F4"
        android:text="Brakes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />


    <!-- this text view is to display the current mileage.   -->
    <TextView
        android:id="@+id/currentMileage"
        android:layout_width="222dp"
        android:layout_height="74dp"
        android:background="#9503A9F4"
        android:gravity="center"
        android:inputType="number|text"
        android:text="500143 miles"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331" />

</androidx.constraintlayout.widget.ConstraintLayout>