<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CarInformationLayout"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".CarInformation">

    <!-- TODO: Update blank fragment layout -->


    <!-- this text view is to display the current mileage.   -->

    <Button
        android:id="@+id/btnTires"
        android:layout_width="112dp"
        android:layout_height="47dp"
        android:background="@drawable/button_carinfo"
        android:text="Tire Rotation"
        android:textColor="@color/text_carinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <Button
        android:id="@+id/btnFluids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_carinfo"
        android:text="Engine Oil"
        android:textColor="@color/text_carinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <Button
        android:id="@+id/btnBattery"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:background="@drawable/button_carinfo"
        android:text="Battery"
        android:textColor="@color/text_carinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <Button
        android:id="@+id/btnBrakes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_carinfo"
        android:text="Brakes"
        android:textColor="@color/text_carinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <TextView

        android:id="@+id/currentMileage"
        android:layout_width="222dp"
        android:layout_height="74dp"
        android:background="@drawable/button_carinfo"
        android:gravity="center"
        android:hint="Current Mileage"
        android:inputType="number|text"
        android:textAlignment="center"
        android:textColor="@color/text_carinfo"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />


</androidx.constraintlayout.widget.ConstraintLayout>