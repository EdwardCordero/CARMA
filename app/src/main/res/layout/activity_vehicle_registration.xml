<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleRegistration">
    <!-- TODO: Update back button/ bottom nav to go back-->
    <TextView
        android:id="@+id/CarCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Information"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/VehicleInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:text="Vehicle Information"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CarCollection"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/MakeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VehicleInformation" />

    <TextView
        android:id="@+id/ModelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Model"
        android:textSize="25sp"
        app:layout_constraintRight_toLeftOf="@id/YearText"
        app:layout_constraintTop_toBottomOf="@+id/VehicleInformation" />

    <TextView
        android:id="@+id/YearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VehicleInformation" />

    <TextView
        android:id="@+id/MileageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mileage"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MakeText" />

    <TextView
        android:id="@+id/LicensePlateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="License Plate"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BodyStyleText" />

    <TextView
        android:id="@+id/BodyStyleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BodyStyle"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MakeText" />

    <TextView
        android:id="@+id/TireInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:text="Tire Information"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LicensePlateText"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/TireDiameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tire Diameter"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TireInformation" />

    <TextView
        android:id="@+id/TireServiceTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tire Service Type"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TireInformation" />

    <TextView
        android:id="@+id/TireRotationMilesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tire Rotation Miles"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TireDiameter" />

    <TextView
        android:id="@+id/OilInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:text="Oil Information"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TireRotationMilesText"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/OilGradeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oil Grade"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OilInformation" />

    <TextView
        android:id="@+id/OilChangeMilesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oil Change Date:"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OilInformation"

        />

    <TextView
        android:id="@+id/InsuranceInformationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:text="Insurance Information"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OilChangeMilesText"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/RegistrationExperationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exp: Date"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InsuranceInformationText" />

    <TextView
        android:id="@+id/InsurancePolicyNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insurance Policy Num"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InsuranceInformationText" />

    <TextView
        android:id="@+id/PremiumFeaturesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6200EE"
        android:text="Premium Features"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InsurancePolicyNumText"
        app:layout_constraintVertical_bias="0.105" />

    <Button
        android:id="@+id/RecallsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recalls"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PremiumFeaturesText"
        app:layout_constraintVertical_bias="0.279" />

    <Button
        android:id="@+id/WarrantyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warranties"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RecallsButton"
        app:layout_constraintVertical_bias="0.279" />

</androidx.constraintlayout.widget.ConstraintLayout>